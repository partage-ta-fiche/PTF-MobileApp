<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.partagetafiche.app" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Partage-ta-Fiche</name>
    <description>L'application officiel Partage-ta-fiche</description>
    <author email="maleville.etienne@gmail.com" href="https://partage-ta-fiche.fr">
        Partage-ta-Fiche Dev Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <access origin="*"/>
    <icon src="/www/img/logo.png"/>
    <plugin name="cordova-plugin-splashscreen" source="npm" />   
    <splash src="/www/img/logo.png" />
    <preference name = "SplashScreenDelay" value = "4000" />  
    <platform name="android">
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/img/logo.xml" />
</platform>
        
<allow-navigation href="*"/>

</widget>
